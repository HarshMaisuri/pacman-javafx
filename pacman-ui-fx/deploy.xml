<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.amr.games.pacman.ui.fx</groupId>
	<artifactId>pacman-javafx-tentackle</artifactId>
	<version>1.0</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<mainClass>de.amr.games.pacman.ui.fx.app.Main</mainClass>
		<mainModule>de.amr.games.pacman.ui.fx</mainModule>
		<version.javafx>18.0.2</version.javafx>
		<version.tentackle>17.11.0.0</version.tentackle>
		<version.tinylog>2.6.1</version.tinylog>
	</properties>

	<packaging>jlink</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.tentackle</groupId>
				<artifactId>tentackle-jlink-maven-plugin</artifactId>
				<version>${version.tentackle}</version>
				<extensions>true</extensions>
				<configuration>
					<mainModule>${mainModule}</mainModule>
					<mainClass>${mainClass}</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>de.amr.games.pacman</groupId>
			<artifactId>pacman-core</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>de.amr.games.pacman.ui.fx</groupId>
			<artifactId>pacman-ui-fx</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.tinylog</groupId>
			<artifactId>tinylog-api</artifactId>
			<version>${version.tinylog}</version>
		</dependency>
		<dependency>
			<groupId>org.tinylog</groupId>
			<artifactId>tinylog-impl</artifactId>
			<version>${version.tinylog}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${version.javafx}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-media</artifactId>
			<version>${version.javafx}</version>
		</dependency>
	</dependencies>
</project>