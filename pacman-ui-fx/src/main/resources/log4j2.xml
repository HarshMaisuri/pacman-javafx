		<Logger name="de.amr.games.pacman.ui.fx._3d.animation.PortalTraversalAnimation" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.ui.fx.input.Keyboard" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.ui.fx.sound.GameSounds" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="info">
