			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.model.common.GameLevel" level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.model.common.GameModel" level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.event.GameEvents" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.lib.fsm.Fsm" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.amr.games.pacman.lib.FollowRoute" level="info" additivity="false">
