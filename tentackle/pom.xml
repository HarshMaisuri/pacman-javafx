<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>de.amr.games.pacman.ui.fx</groupId>
	<artifactId>pacman-javafx-tentackle</artifactId>
	<version>1.0</version>
	
	<properties>
		<mainClass>de.amr.games.pacman.ui.fx.app.PacManGameAppFX</mainClass>
		<mainModule>de.amr.games.pacman.ui.fx</mainModule>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>18</maven.compiler.source>
		<maven.compiler.target>18</maven.compiler.target>
		<version.tentackle>17.11.0.0</version.tentackle>
	</properties>
	
	<packaging>jlink</packaging>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.tentackle</groupId>
				<artifactId>tentackle-jlink-maven-plugin</artifactId>
				<version>${version.tentackle}</version>
				<extensions>true</extensions>
				<configuration>
					<mainModule>${mainModule}</mainModule>
					<mainClass>${mainClass}</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>de.amr.games.pacman.ui.fx</groupId>
			<artifactId>pacman_ui_fx</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
</project>