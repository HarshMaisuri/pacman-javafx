<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.amr.games.pacman.ui.fx</groupId>
	<artifactId>pacman-javafx-tentackle</artifactId>
	<version>1.0</version>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<packaging>jlink</packaging>
	<dependencies>
		<dependency>
			<groupId>de.amr.games.pacman.ui.fx</groupId>
			<artifactId>pacman_ui_fx</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<release>17</release>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.tentackle</groupId>
				<artifactId>tentackle-jlink-maven-plugin</artifactId>
				<version>11.7.4.0</version>
				<extensions>true</extensions>
				<configuration>
					<mainModule>de.amr.games.pacman.ui.fx</mainModule>
					<mainClass>de.amr.games.pacman.ui.fx.app.PacManGameAppFX</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>